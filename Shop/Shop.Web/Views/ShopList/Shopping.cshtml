@model List<DAL.Model.Product>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Shopping</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    @using (Html.BeginForm("Buy", "ShopList", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
    <div class="container">
        <div class="page-header">
            <h1>Shopping</h1>
        </div>
        <input type="submit" class="btn bg-info btn-block" value="Satın Alma İşlemini Tamamla" />
        <br />
        <table class="table">
            <thead>
                <tr class="table-info">
                    <td> Satın Al</td>
                    <td> Adı</td>
                    <td> Resim</td>
                    <td> Fiyat</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td> <input type="checkbox" id="@product.id" name="@product.id" value="@product.id"/> </td>
                        <td>@product.Name</td>
                        <td> <input type="image" src="~/Images/@product.ImageUrl" width="200" height="100" alt="@product.Name"/> </td>
                        <td>$@(product.Price)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }
</body>
</html>
